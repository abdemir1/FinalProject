    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RecipeCo.</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @*<a class="nav-link active" aria-current="page" href="#!">Home</a>*@
                        <a class="nav-link text-warning" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        @*<a class="nav-link" href="#!">About</a>*@
                        <a class="nav-link text-warning" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                    </li>
                    <li class="nav-item">
                        @*<a class="nav-link" href="#!">Contact</a>*@
                        <a class="nav-link text-warning" asp-area="" asp-controller="Recipes" asp-action="Index">My Recipes</a>
                    </li>

                </ul>
                <partial name="_LoginPartial" />
            </div>

        </div>
    </nav>

    <header class="py-5 bg-image-full" style="background-image: url('https://image.freepik.com/free-vector/seamless-pattern-with-vegetarian-food_73378-545.jpg')">
        <div class="text-center my-5">

            <img class="img-fluid rounded-circle mb-4" src="~/lib/Krem ve Siyah Doğal Makyaj Güzellik Logo.png" width="200" height="200" />


            <div>
                <form asp-controller="Recipes" asp-action="Index" method="get">
                    <input name="SearchText" id="SearchText" />
                    <input type="submit" value="Search" />
                </form>
            </div>

        </div>

        <div class="text-center">
            @await Component.InvokeAsync("CategoryMenu")
        </div>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>





